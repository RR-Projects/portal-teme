@page
@model PortalTeme.Auth.Areas.Identity.Pages.Admin.UserClaims.AddClaimModel
@{
    ViewData["Title"] = "Add Claim";
    ViewData["ActivePage"] = AdminNavPages.AssignRole;
}

<h5>Assign Role to User</h5>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Input.Name"></label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Value"></label>
        <input asp-for="Input.Value" class="form-control" />
        <span asp-validation-for="Input.Value" class="text-danger"></span>
    </div>

    <a class="btn btn-outline-secondary" asp-page="Index" asp-route-userId="@Model.UserId">Cancel</a>
    <button type="submit" class="btn btn-primary" asp-route-userId="@Model.UserId">Add</button>
</form>