@model PortalTeme.ViewModels.Home.AngularIndexViewModel

@{
    ViewData["Title"] = "Portal Teme";
}

<app-root>Loading...</app-root>

@* Pass server side variables to frontend *@
<script type="text/javascript">
    window.portalTeme = window.portalTeme || {};

    window.portalTeme.settings = window.portalTeme.settings || {
        accessToken: "@Model.AccessToken"
    };

    @if(Model.User != null) {
    <text>
    window.portalTeme.settings.user = {
        email: "@Model.User.Email",
        firstName: "@Model.User.FirstName",
        lastName: "@Model.User.LastName"
    };
    </text>
    }

</script>
@foreach (var claim in User.Claims) {
    @($"{claim.Type}: {claim.Value}")
    <br />
}